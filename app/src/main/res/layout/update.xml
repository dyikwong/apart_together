<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update">

    <Button
        android:id="@+id/submit_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="70dp"
        android:text="@string/submit_txt"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/name_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="Date"
        app:layout_constraintBottom_toTopOf="@+id/body_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/body_text"
        android:layout_width="347dp"
        android:layout_height="126dp"
        android:hint="How are you feeling?"
        app:layout_constraintBottom_toTopOf="@+id/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/body_text"
        app:layout_constraintTop_toBottomOf="@+id/body_text"
        app:layout_constraintVertical_bias="0.604"
        app:rowCount="2">

        <ImageView
            android:id="@+id/happy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/happy"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/sad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/sad"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/mad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/mad"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/sick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/sick"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/hearteyes"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/scared"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:src="@drawable/scared"
            app:layout_column="2"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>